{
    "name": "cob.api",
    "author": {
        "name": "Diego Maia"
    },
    "scripts": {
        "build": "./node_modules/.bin/babel server.js --out-dir lib",
        "start": "concurrently -n \"server\" -c \"cyan\" \"babel-node server.js\"",
        "start:nodemon": "concurrently -n \"server\" -c \"cyan\" \"nodemon --exec babel-node server.js\""
    },
    "dependencies": {
        "babel-preset-env": "^1.7.0",
        "concurrently": "^4.0.1",
        "config": "^2.0.1",
        "eslint": "^5.4.0",
        "express": "^4.16.3",
        "mongoose": "^5.2.9",
        "winston": "^3.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "nodemon": "^1.18.3"
    },
    "nodemonConfig": {
        "verbose": true,
        "ignore": [
            "*.test.js"
        ]
    }
}
